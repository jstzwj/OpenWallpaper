<UserControl x:Class="OpenWallpaper.UI.WallpaperItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenWallpaper.UI"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid Cursor="None">
        <Image Name="WallpaperImage" Height="100" VerticalAlignment="Top" Width="100" Cursor="Hand"/>
        <Label Name="WallpaperName" Content="Name" Margin="0,69,0,0" VerticalAlignment="Top" Height="31" Width="100" Background="#4C707070" Foreground="White" Cursor="Hand"/>
    </Grid>
</UserControl>
